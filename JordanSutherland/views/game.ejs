        canvas.height = window.innerHeight / 2;

        // Draw Background
        ctx.drawImage(WALLS[0], 0, 0, WIDTH * 4, HEIGHT); // Top half
        ctx.drawImage(WALLS[0], 0, HEIGHT, WIDTH * 4, HEIGHT); // Bottom half

        // Draw FPS
